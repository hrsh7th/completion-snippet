{
  "if": {
    "prefix": "if ",
    "body": [
      "if $1",
      "\t$TM_SELECTED_TEXT$2",
      "endif"
    ]
  },
  "for": {
    "prefix": "for ... in ...",
    "body": [
      "for $2 in $1",
      "\t$TM_SELECTED_TEXT$3",
      "endfor"
    ]
  },
  "while": {
    "prefix": "while ...",
    "body": [
      "while $1",
      "\t$TM_SELECTED_TEXT$2",
      "endwhile"
    ]
  },
  "try": {
    "prefix": "try ... catch ...",
    "body": [
      "try",
      "\t$TM_SELECTED_TEXT$1",
      "catch ${2:/.*/}",
      "\t$3",
      "endtry"
    ]
  }
}
